@page
@model SoccerGame.Pages.Teams.EditModel
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.ID" />
            <div class="form-group">
                <label asp-for="Team.LastName" class="control-label"></label>
                <input asp-for="Team.LastName" class="form-control" />
                <span asp-validation-for="Team.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.FullName" class="control-label"></label>
                <input asp-for="Team.FullName" class="form-control" />
                <span asp-validation-for="Team.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.HireDate" class="control-label"></label>
                <input asp-for="Team.HireDate" class="form-control" />
                <span asp-validation-for="Team.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.SoccerAssignment.Location" class="control-label"></label>
                <input asp-for="Team.SoccerAssignment.Location" class="form-control" />
                <span asp-validation-for="Team.SoccerAssignment.Location" class="text-danger" />
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;

                                foreach (var course in Model.AssignedCoachDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selechedcoach"
                                               value="@course.CoachID"
                                               @(Html.Raw(course.Assigned ? "checked=\"checked\"" : "")) />
                                        @course.CoachID @:  @course.FirstMidName
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
